{
  "name": "webstatic_helper",
  "version": "0.2.1",
  "description": "A tool for webstatic.mihoyo.com",
  "main": "main.js",
  "scripts": {
    "test": "electron .",
    "dist": "electron-builder --win"
  },
  "author": "CPTCoder",
  "license": "GPL-3.0-or-later",
  "devDependencies": {
    "electron": "^12.2.3",
    "electron-builder": "^23.6.0"
  },
  "iohook": {
    "targets": [
      "electron-87"
    ],
    "platforms": [
      "win32",
      "darwin",
      "linux"
    ],
    "arches": [
      "x64",
      "ia32"
    ]
  },
  "dependencies": {
    "iohook": "^0.9.3",
    "jquery-custom-select": "^1.6.4"
  },
  "overrides": {
    "node-ipc@>9.2.1 <10": "9.2.1",
    "node-ipc@>10.1.0": "10.1.0"
  },
  "build": {
    "appId": "com.webstatic_helper.app",
    "productName": "Webstatic Helper",
    "files": [
        "!settings.json",
        "!w1_latest.js",
        "!w1_source.js",
        "!server/helper_server/helper_server.*"
    ],
    "extraFiles": [
        "server/helper_server/x64/**/*"
    ],
    "directories": {
      "output": "../Builds/${name}_${version}"
    },
    "nsis": {
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "license": "LICENSE",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "观测枢助手"
    },
    "win": {
      "requestedExecutionLevel": "requireAdministrator",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  }
}
